<div class="row mt-3">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">註冊</h1>
      {{> message }}
      <form action="/users/register" method="POST">
        <div class="form-group my-3">
          <label for="name">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value={{name}}>
        </div>
        <div class="form-group my-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required
            value={{email}}>
        </div>
        <div class="form-group mt-3">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            required value={{password}}>
        </div>
        <div class="form-group my-3">
          <label for="confirmPassword">確認密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password" required value={{confirmPassword}}>
        </div>
        <button type="submit" class="btn btn-warning btn-block w-100 text-white">註冊</button>
        <a href="/auth/facebook" class="btn btn-info btn-block my-3 w-100">Facebook 註冊</a>
      </form>
      <p class="lead">
        已經有帳號? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>