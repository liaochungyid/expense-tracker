<div class="row mt-3">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">登入</h1>
      {{> message }}
      <form action="/users/login" method="POST">
        <div class="form-group my-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="輸入 Email" value="{{email}}"
            autofocus required>
        </div>
        <div class="form-group my-3">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="輸入密碼" required>
        </div>
        <button type="submit" class="btn btn-warning btn-block w-100 text-white">登入</button>
        <a href="/auth/facebook" class="btn btn-info btn-block my-3 w-100">Facebook 登入</a>
      </form>
      <p class="lead">
        還沒有帳號? <a href="/users/register">註冊</a>
      </p>
    </div>
  </div>
</div>