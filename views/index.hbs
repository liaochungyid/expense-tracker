<div class="btn-group container col-9 my-3">
  <button class="btn btn-outline-dark btn-lg dropdown-toggle text-lg-start" type="button" data-bs-toggle="dropdown"
    aria-expanded="false">
    類別
  </button>
  <ul class="dropdown-menu container">
    {{#each categories}}
    <li><a class="dropdown-item" href="/{{this}}">{{this}}</a></li>
    {{/each}}
  </ul>
</div>

<div class="container col-12">
  <div class="row">
    <span class="d-inline col-3 fs-3">總金額：</span>
    <span class="d-inline text-end text-warning col-6" style="font-size: 6em;">{{totalAmount}}</span>
  </div>
  <table class="table table-striped table-hover table-borderless align-middle">

    <tbody>
      {{#each records}}
      <tr>
        <td width="10%" class="text-center text-info fs-1">{{{this.icon}}}</td>
        <td width="35%">
          <div class="text-start fs-4">{{this.name}}</div>
          <div class="text-start fs-6">{{this.date}}</div>
        </td>
        <td width="30%" class="text-end fs-4">{{this.amount}}</td>
        <td width="25%" class="text-center fs-4" style="box-shadow: none;">
          <a class="btn btn-light" href="/expenses/{{this._id}}">修改</a>
          <form method="POST" action="/expenses/{{this._id}}?_method=DELETE" style="display: inline">
            <button type="submit" class="btn btn-light">刪除</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="container">
  <div class="row col-9 my-3">
    <a class="btn btn-warning btn-lg w-50 m-auto text-light" href="/expenses/create">新增支出</a>
  </div>
</div>